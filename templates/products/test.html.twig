{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
         {% for product in products %}
             {% dump(product) %}
             <div class="card" style="width: 18rem;">
                 <img src="{{ product["photos"][0]['formats']['medium'] }}" class="card-img-top" alt="{{ product['name']['fr'] }}">
                 <div class="card-body">
                     <h5 class="card-title">{{ product['name']['fr'] }}</h5>
                     {% dump(product['descriptions']) %}
                     {% if product.descriptions[1] is defined %}
                         <!--------------- raw filter in twig to escape html tags from the variable ------------->
                         <p class="card-text">{{ product['descriptions'][1]['content']['fr']|raw }}</p>
                     {% else %}
                         <p class="card-text">Description en cours</p>
                     {% endif %}
                     <p class="card-text">Prix TTC: {{ (product.publicPrice/100)|number_format(2) }}â‚¬</p>
                     <a href="#" class="btn btn-success btn-sm">Voir</a>
                 </div>
             </div>

        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    .container {
        display: flex;
        flex-wrap: wrap;
        padding: 10px;
    }
</style>
{% endblock %}

