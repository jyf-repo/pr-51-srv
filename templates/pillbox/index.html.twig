                    <a href="#" title="Modifier"><i class="bi bi-pencil-square"></i></a>
                </div>
                <div class="col">
                    <a href="{{ path('app_users_del', {'id': app_user.id}) }}" title="Supprimer"><i class="bi bi-trash"></i></a>
                </div>
            </div>
        </div>
    {% endfor %}
