{% extends 'base.html.twig' %}

{% block title %}Fiche patient{% endblock %}

{% block body %}
<div class="container">
    <p><strong>Prénom:</strong> {{ user.firstname }}</p>
    <p><strong>Nom: </strong>{{ user.lastname }}</p>
    <p><strong>Email: </strong>{{ user.email }}</p>
    <p><strong>Téléphone: </strong>{{ user.phonenumber }}</p>
    <p><strong>Prescriptions: </strong></p>
    {% for prescription in user.prescriptions %}
        <p><a href="{{ asset('uploads/prescriptions/' ~ prescription.prescriptionFileName) }}">{{ prescription.prescriptionFileName }}</a></p>
    {% endfor %}
    <div class="btn btn-primary"><a href="{{ path('app_upload_filePrescription', {'userId': user.id }) }}" style="color: white; text-decoration: none">Nouvelle prescription</a></div>
    <hr>
    <p><strong>Piluliers: </strong></p>
    {% for pillbox in user.pillboxes %}
        <div>
            <p>{{ pillbox.start|date('d-m-Y') }}</p>
            <p>{{ pillbox.end|date('d-m-Y') }}</p>
            <p>{{ pillbox.comments }}</p>
            <p>{{ pillbox.price }}</p>
        </div>
    {% endfor %}
    <div class="btn btn-primary"><a href="{{ path('app_new_pillbox') }}" style="color: white; text-decoration: none">Nouveau pilulier</a></div>
    <hr>
    <p><a href="{{ path('app_admin_users') }}">Retour vers administration</a></p>
    <p><a href="{{ path('app_pillbox') }}">Retour vers clients</a></p>
</div>
{% endblock %}
